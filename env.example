# Global Regeneration Ceremony (GRC) Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API Host (for Swagger documentation)
API_HOST=localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/grc?retryWrites=true&w=majority
MONGODB_DATABASE=grc

# =============================================================================
# BLOCKCHAIN CONFIGURATION (Base Testnet)
# =============================================================================

# Base Testnet RPC URLs
BASE_TESTNET_URL=https://sepolia.base.org
BASE_MAINNET_URL=https://mainnet.base.org

# Contract Addresses (deploy contracts first)
GRC_RITUAL_SUBMISSION_ADDRESS=0x...
SYMBIOSIS_PLEDGE_ADDRESS=0x...

# Wallet Configuration
PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# Gas Configuration
GAS_LIMIT=3000000
GAS_PRICE=1000000000

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================

# IPFS Gateway URLs
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
IPFS_API_URL=https://ipfs.infura.io:5001/api/v0

# IPFS Project Configuration (Infura)
IPFS_PROJECT_ID=your_infura_project_id
IPFS_PROJECT_SECRET=your_infura_project_secret

# =============================================================================
# AI FILTER CONFIGURATION
# =============================================================================

# ESEP Filter Settings
ESEP_MAX_SCORE=0.7
ESEP_ETHICAL_WEIGHT=0.4
ESEP_SPIRITUAL_WEIGHT=0.4
ESEP_BALANCE_WEIGHT=0.2

# CEDA Filter Settings
CEDA_MIN_REFERENCES=2
CEDA_DIVERSITY_THRESHOLD=0.3
CEDA_AUTHENTICITY_THRESHOLD=0.5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_BASE_TESTNET_URL=https://sepolia.base.org
NEXT_PUBLIC_CONTRACT_ADDRESS=0x...

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOGTAIL_TOKEN=your_logtail_token_here

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# File Upload (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=grc-uploads

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Testing
TEST_MONGODB_URI=mongodb://localhost:27017/grc-test
TEST_PRIVATE_KEY=test_private_key_here

# Development
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_LOGGING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production
PRODUCTION_URL=https://your-domain.com
PRODUCTION_API_URL=https://api.your-domain.com

# Staging
STAGING_URL=https://staging.your-domain.com
STAGING_API_URL=https://staging-api.your-domain.com

# =============================================================================
# CULTURAL VALIDATION SETTINGS
# =============================================================================

# Expert Review Panel
EXPERT_REVIEW_ENABLED=true
EXPERT_REVIEW_THRESHOLD=0.8

# Cultural Sensitivity
CULTURAL_SENSITIVITY_CHECK=true
BIAS_DETECTION_ENABLED=true

# =============================================================================
# DAO GOVERNANCE
# =============================================================================

# Voting Configuration
VOTING_PERIOD_DAYS=7
MINIMUM_QUORUM=100
PROPOSAL_THRESHOLD=10

# Council Members
COUNCIL_MEMBER_1=0x...
COUNCIL_MEMBER_2=0x...
COUNCIL_MEMBER_3=0x...

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Discord Webhook (for notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Slack Webhook (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ADMIN_EMAIL=admin@your-domain.com